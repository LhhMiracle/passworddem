/* app.wxss - 全局样式 */

page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

/* 主题色 */
.primary-color {
  color: #0052CC;
}

.primary-bg {
  background-color: #0052CC;
}

/* 按钮样式 */
.btn-primary {
  background-color: #0052CC;
  color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  width: 100%;
  margin: 16rpx 0;
}

.btn-primary:active {
  background-color: #0047b3;
}

.btn-secondary {
  background-color: #ffffff;
  color: #0052CC;
  border: 2rpx solid #0052CC;
  border-radius: 16rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: 500;
  width: 100%;
  margin: 16rpx 0;
}

.btn-secondary:active {
  background-color: #f0f7ff;
}

/* 输入框样式 */
.input-group {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 24rpx 32rpx;
  margin-bottom: 24rpx;
}

.input-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.input-field {
  width: 100%;
  height: 72rpx;
  font-size: 32rpx;
  color: #333;
}

/* 卡片样式 */
.card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

/* 列表项样式 */
.list-item {
  display: flex;
  align-items: center;
  padding: 28rpx 32rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #f0f0f0;
}

.list-item:last-child {
  border-bottom: none;
}

.list-item:active {
  background-color: #f8f8f8;
}

/* 图标容器 */
.icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

/* 安全容器 */
.safe-area-bottom {
  padding-bottom: env(safe-area-inset-bottom);
}

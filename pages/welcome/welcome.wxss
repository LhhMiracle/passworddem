/* 欢迎页面样式 - 1Password风格 */

.welcome-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #ffffff;
}

/* 顶部蓝色区域 */
.welcome-header {
  flex: 1;
  background: linear-gradient(180deg, #0052CC 0%, #0747A6 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  border-bottom-left-radius: 60rpx;
  border-bottom-right-radius: 60rpx;
}

/* 轮播区域 */
.welcome-swiper {
  width: 100%;
  height: 100%;
}

.swiper-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  padding: 80rpx 60rpx;
}

/* 欢迎文字 */
.welcome-text {
  font-size: 36rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 20rpx;
}

/* Logo区域 */
.app-logo {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
}

.logo-icon {
  width: 100rpx;
  height: 100rpx;
  background-color: #ffffff;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.logo-lock {
  font-size: 56rpx;
}

.app-name {
  font-size: 64rpx;
  font-weight: bold;
  color: #ffffff;
  letter-spacing: 2rpx;
}

/* 功能图标 */
.feature-icon {
  font-size: 120rpx;
  margin-bottom: 40rpx;
}

/* 功能标题 */
.feature-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 24rpx;
}

/* 功能描述 */
.feature-desc {
  font-size: 30rpx;
  color: rgba(255, 255, 255, 0.85);
  text-align: center;
  line-height: 1.6;
}

/* 底部按钮区域 */
.welcome-footer {
  padding: 60rpx 48rpx;
  padding-bottom: calc(60rpx + env(safe-area-inset-bottom));
  background-color: #ffffff;
}

/* 创建账户按钮 */
.btn-create {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  background-color: #0052CC;
  color: #ffffff;
  font-size: 34rpx;
  font-weight: 500;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  border: none;
}

.btn-create:active {
  background-color: #0047b3;
}

/* 登录按钮 */
.btn-signin {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  background-color: #ffffff;
  color: #0052CC;
  font-size: 34rpx;
  font-weight: 500;
  border-radius: 16rpx;
  border: 2rpx solid #0052CC;
}

.btn-signin:active {
  background-color: #f0f7ff;
}

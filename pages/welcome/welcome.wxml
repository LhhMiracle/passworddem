<!-- 欢迎页面 - 类似1Password风格 -->
<view class="welcome-container">
  <!-- 顶部蓝色区域 -->
  <view class="welcome-header">
    <!-- 轮播引导 -->
    <swiper
      class="welcome-swiper"
      indicator-dots="{{true}}"
      indicator-color="rgba(255,255,255,0.5)"
      indicator-active-color="#ffffff"
      autoplay="{{true}}"
      interval="{{4000}}"
      duration="{{500}}"
      circular="{{true}}"
      bindchange="onSwiperChange"
    >
      <swiper-item>
        <view class="swiper-content">
          <view class="welcome-text">欢迎使用</view>
          <view class="app-logo">
            <view class="logo-icon">
              <text class="logo-lock">&#128274;</text>
            </view>
            <text class="app-name">密码保险箱</text>
          </view>
          <view class="feature-desc">安全存储您的所有密码</view>
        </view>
      </swiper-item>

      <swiper-item>
        <view class="swiper-content">
          <view class="feature-icon">&#128272;</view>
          <view class="feature-title">军事级加密</view>
          <view class="feature-desc">采用AES-256加密算法</view>
          <view class="feature-desc">确保您的数据绝对安全</view>
        </view>
      </swiper-item>

      <swiper-item>
        <view class="swiper-content">
          <view class="feature-icon">&#9889;</view>
          <view class="feature-title">快速访问</view>
          <view class="feature-desc">一键复制密码</view>
          <view class="feature-desc">告别繁琐的手动输入</view>
        </view>
      </swiper-item>

      <swiper-item>
        <view class="swiper-content">
          <view class="feature-icon">&#128736;</view>
          <view class="feature-title">密码生成器</view>
          <view class="feature-desc">自动生成强密码</view>
          <view class="feature-desc">让您的账户更安全</view>
        </view>
      </swiper-item>

      <swiper-item>
        <view class="swiper-content">
          <view class="feature-icon">&#128373;</view>
          <view class="feature-title">隐私优先</view>
          <view class="feature-desc">所有数据本地加密存储</view>
          <view class="feature-desc">只有您能解锁</view>
        </view>
      </swiper-item>
    </swiper>
  </view>

  <!-- 底部白色区域 - 按钮 -->
  <view class="welcome-footer">
    <button class="btn-create" bindtap="goToRegister">
      创建新账户
    </button>
    <button class="btn-signin" bindtap="goToLogin">
      已有账户，登录
    </button>
  </view>
</view>

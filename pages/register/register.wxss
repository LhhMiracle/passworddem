/* 注册页面样式 */

.register-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 头部区域 */
.register-header {
  background: linear-gradient(180deg, #0052CC 0%, #0747A6 100%);
  padding: 80rpx 48rpx 60rpx;
  text-align: center;
  color: #ffffff;
}

.header-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.header-title {
  font-size: 44rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.header-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.85);
  line-height: 1.5;
}

/* 表单区域 */
.register-form {
  flex: 1;
  padding: 40rpx 32rpx;
}

.input-group {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 28rpx 32rpx;
  margin-bottom: 24rpx;
}

.input-label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.input-wrapper {
  display: flex;
  align-items: center;
}

.input-field {
  flex: 1;
  height: 72rpx;
  font-size: 32rpx;
  color: #333;
}

.toggle-password {
  padding: 16rpx;
  font-size: 36rpx;
}

/* 密码强度指示器 */
.strength-container {
  display: flex;
  align-items: center;
  margin-top: 16rpx;
}

.strength-bar {
  flex: 1;
  height: 8rpx;
  background-color: #e8e8e8;
  border-radius: 4rpx;
  overflow: hidden;
  margin-right: 16rpx;
}

.strength-fill {
  height: 100%;
  border-radius: 4rpx;
  transition: all 0.3s ease;
}

.strength-text {
  font-size: 24rpx;
  min-width: 60rpx;
}

/* 错误提示 */
.error-text {
  font-size: 24rpx;
  color: #ff4d4f;
  margin-top: 12rpx;
}

.success-text {
  font-size: 24rpx;
  color: #52c41a;
  margin-top: 12rpx;
}

/* 提示卡片 */
.tips-card {
  background-color: #fffbe6;
  border: 1rpx solid #ffe58f;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-top: 16rpx;
}

.tips-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #d48806;
  margin-bottom: 12rpx;
}

.tips-item {
  font-size: 24rpx;
  color: #8c6d00;
  line-height: 1.8;
  padding-left: 16rpx;
}

.tips-item::before {
  content: "•";
  margin-right: 8rpx;
}

/* 底部按钮 */
.register-footer {
  padding: 32rpx 48rpx;
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
}

.btn-create {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  background-color: #0052CC;
  color: #ffffff;
  font-size: 34rpx;
  font-weight: 500;
  border-radius: 16rpx;
  border: none;
}

.btn-create:active {
  background-color: #0047b3;
}

.btn-disabled {
  background-color: #b3d4ff !important;
  color: rgba(255, 255, 255, 0.7);
}

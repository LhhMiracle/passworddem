/* 添加密码页面样式 */

.add-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

.form-scroll {
  flex: 1;
  padding-bottom: 160rpx;
}

/* 表单区块 */
.form-section {
  background-color: #ffffff;
  margin: 24rpx;
  border-radius: 16rpx;
  padding: 24rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}

/* 分类选择 */
.category-scroll {
  white-space: nowrap;
  margin: 0 -24rpx;
  padding: 0 24rpx;
}

.category-list {
  display: inline-flex;
  gap: 16rpx;
}

.category-chip {
  display: inline-block;
  padding: 12rpx 28rpx;
  border: 2rpx solid;
  border-radius: 32rpx;
  font-size: 26rpx;
  transition: all 0.2s;
}

.category-chip.active {
  border-color: transparent !important;
}

/* 输入组 */
.input-group {
  margin-bottom: 24rpx;
}

.input-group:last-child {
  margin-bottom: 0;
}

.input-label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.input-field {
  width: 100%;
  height: 80rpx;
  background-color: #f8f8f8;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  color: #333;
  box-sizing: border-box;
}

.textarea-field {
  width: 100%;
  height: 160rpx;
  background-color: #f8f8f8;
  border-radius: 12rpx;
  padding: 20rpx 24rpx;
  font-size: 30rpx;
  color: #333;
  box-sizing: border-box;
}

/* 密码输入 */
.password-input-wrapper {
  display: flex;
  align-items: center;
  background-color: #f8f8f8;
  border-radius: 12rpx;
  padding-right: 8rpx;
}

.password-input-wrapper .input-field {
  flex: 1;
  background: transparent;
}

.input-actions {
  display: flex;
  align-items: center;
}

.action-icon {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

/* 密码强度 */
.strength-container {
  display: flex;
  align-items: center;
  margin-top: 12rpx;
}

.strength-bar {
  flex: 1;
  height: 6rpx;
  background-color: #e8e8e8;
  border-radius: 3rpx;
  overflow: hidden;
  margin-right: 16rpx;
}

.strength-fill {
  height: 100%;
  border-radius: 3rpx;
  transition: all 0.3s ease;
}

.strength-text {
  font-size: 22rpx;
  min-width: 60rpx;
}

/* 底部按钮 */
.form-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  gap: 24rpx;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background-color: #ffffff;
  border-top: 1rpx solid #f0f0f0;
}

.btn-cancel {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #f5f5f5;
  color: #666;
  font-size: 32rpx;
  border-radius: 12rpx;
  border: none;
}

.btn-save {
  flex: 2;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #0052CC;
  color: #ffffff;
  font-size: 32rpx;
  border-radius: 12rpx;
  border: none;
}

.btn-disabled {
  background-color: #b3d4ff !important;
}

/* 密码生成器弹窗 */
.generator-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  align-items: flex-end;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: relative;
  width: 100%;
  background-color: #ffffff;
  border-radius: 32rpx 32rpx 0 0;
  padding: 32rpx;
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.modal-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
}

.modal-close {
  font-size: 36rpx;
  color: #999;
  padding: 8rpx;
}

.generated-password {
  background-color: #f5f5f5;
  border-radius: 12rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  text-align: center;
}

.generated-password text {
  font-size: 36rpx;
  font-family: monospace;
  font-weight: 600;
  color: #0052CC;
  word-break: break-all;
}

.generator-options {
  margin-bottom: 32rpx;
}

.option-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  font-size: 28rpx;
  color: #333;
}

.option-row:last-child {
  border-bottom: none;
}

.length-slider {
  width: 300rpx;
}

.modal-footer {
  display: flex;
  gap: 24rpx;
}

.btn-regenerate {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #f5f5f5;
  color: #333;
  font-size: 30rpx;
  border-radius: 12rpx;
  border: none;
}

.btn-use {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #0052CC;
  color: #ffffff;
  font-size: 30rpx;
  border-radius: 12rpx;
  border: none;
}

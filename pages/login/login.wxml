<!-- 登录页面 - 解锁保险箱 -->
<view class="login-container">
  <view class="login-header">
    <view class="lock-icon {{isShaking ? 'shake' : ''}}">
      <text>&#128274;</text>
    </view>
    <view class="header-title">解锁保险箱</view>
    <view class="header-desc">请输入主密码以访问您的密码</view>
  </view>

  <view class="login-form">
    <view class="input-group">
      <view class="input-wrapper">
        <input
          class="input-field"
          type="{{showPassword ? 'text' : 'password'}}"
          placeholder="请输入主密码"
          value="{{password}}"
          bindinput="onPasswordInput"
          bindconfirm="unlock"
          focus="{{true}}"
        />
        <view class="toggle-password" bindtap="togglePassword">
          <text>{{showPassword ? '&#128065;' : '&#128064;'}}</text>
        </view>
      </view>
    </view>

    <!-- 错误提示 -->
    <view class="error-message" wx:if="{{errorMessage}}">
      <text>{{errorMessage}}</text>
    </view>

    <button class="btn-unlock" bindtap="unlock">
      解锁
    </button>

    <!-- 忘记密码提示 -->
    <view class="forgot-hint">
      <text class="hint-icon">&#9888;</text>
      <text>如果忘记主密码，将无法恢复数据</text>
    </view>
  </view>

  <!-- 底部选项 -->
  <view class="login-footer">
    <view class="footer-option" bindtap="resetApp">
      忘记密码？重置应用
    </view>
  </view>
</view>

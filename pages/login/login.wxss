/* 登录页面样式 */

.login-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background: linear-gradient(180deg, #0052CC 0%, #0747A6 100%);
}

/* 头部区域 */
.login-header {
  padding: 120rpx 48rpx 80rpx;
  text-align: center;
  color: #ffffff;
}

.lock-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  display: inline-block;
}

.lock-icon.shake {
  animation: shake 0.5s ease-in-out;
}

@keyframes shake {
  0%, 100% { transform: translateX(0); }
  20%, 60% { transform: translateX(-10rpx); }
  40%, 80% { transform: translateX(10rpx); }
}

.header-title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.header-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 表单区域 */
.login-form {
  flex: 1;
  padding: 48rpx 40rpx;
}

.input-group {
  background-color: rgba(255, 255, 255, 0.15);
  border-radius: 16rpx;
  padding: 8rpx 24rpx;
  margin-bottom: 24rpx;
}

.input-wrapper {
  display: flex;
  align-items: center;
}

.input-field {
  flex: 1;
  height: 88rpx;
  font-size: 32rpx;
  color: #ffffff;
}

.input-field::placeholder {
  color: rgba(255, 255, 255, 0.6);
}

.toggle-password {
  padding: 16rpx;
  font-size: 40rpx;
}

/* 错误信息 */
.error-message {
  background-color: rgba(255, 77, 79, 0.2);
  border: 1rpx solid rgba(255, 77, 79, 0.5);
  border-radius: 12rpx;
  padding: 20rpx 24rpx;
  margin-bottom: 24rpx;
  text-align: center;
  color: #ffccc7;
  font-size: 28rpx;
}

/* 解锁按钮 */
.btn-unlock {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  background-color: #ffffff;
  color: #0052CC;
  font-size: 34rpx;
  font-weight: 600;
  border-radius: 16rpx;
  border: none;
  margin-top: 16rpx;
}

.btn-unlock:active {
  background-color: #f0f7ff;
}

/* 忘记密码提示 */
.forgot-hint {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 40rpx;
  color: rgba(255, 255, 255, 0.7);
  font-size: 24rpx;
}

.hint-icon {
  margin-right: 8rpx;
}

/* 底部选项 */
.login-footer {
  padding: 40rpx 48rpx;
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
  text-align: center;
}

.footer-option {
  color: rgba(255, 255, 255, 0.6);
  font-size: 26rpx;
  text-decoration: underline;
}

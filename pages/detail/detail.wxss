/* 密码详情页面样式 */

.detail-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

.detail-scroll {
  flex: 1;
  padding-bottom: 140rpx;
}

/* 头部信息 */
.detail-header {
  display: flex;
  align-items: center;
  padding: 40rpx 32rpx;
  background-color: #ffffff;
  margin-bottom: 24rpx;
}

.header-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  color: #ffffff;
  font-size: 40rpx;
  font-weight: bold;
}

.header-info {
  flex: 1;
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.header-category {
  font-size: 26rpx;
  color: #999;
}

/* 详情区块 */
.detail-section {
  background-color: #ffffff;
  margin: 0 24rpx 24rpx;
  border-radius: 16rpx;
  padding: 24rpx;
}

.section-title {
  font-size: 26rpx;
  font-weight: 500;
  color: #999;
  margin-bottom: 16rpx;
}

/* 信息项 */
.info-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
}

.info-item:active {
  background-color: #f8f8f8;
  margin: 0 -24rpx;
  padding: 20rpx 24rpx;
}

.item-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.item-value-wrapper {
  display: flex;
  align-items: center;
}

.item-value {
  flex: 1;
  font-size: 30rpx;
  color: #333;
  word-break: break-all;
}

.password-value {
  font-family: monospace;
  letter-spacing: 2rpx;
}

.link-value {
  color: #0052CC;
}

.toggle-icon,
.copy-icon,
.link-icon {
  font-size: 32rpx;
  padding: 8rpx;
  margin-left: 16rpx;
}

/* 密码强度 */
.strength-indicator {
  display: flex;
  align-items: center;
  margin-top: 12rpx;
  font-size: 22rpx;
}

.strength-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  margin-right: 8rpx;
}

/* 备注内容 */
.notes-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  white-space: pre-wrap;
}

/* 时间信息 */
.time-info {
  display: flex;
  flex-wrap: wrap;
}

.time-item {
  width: 50%;
  margin-bottom: 16rpx;
}

.time-label {
  font-size: 24rpx;
  color: #999;
  display: block;
  margin-bottom: 4rpx;
}

.time-value {
  font-size: 26rpx;
  color: #666;
}

/* 危险区域 */
.danger-section {
  padding: 40rpx 24rpx;
}

.btn-delete {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #fff2f0;
  color: #ff4d4f;
  font-size: 30rpx;
  border: 1rpx solid #ffccc7;
  border-radius: 12rpx;
}

.btn-delete:active {
  background-color: #ffccc7;
}

/* 底部操作栏 */
.detail-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background-color: #ffffff;
  border-top: 1rpx solid #f0f0f0;
}

.btn-edit {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #0052CC;
  color: #ffffff;
  font-size: 32rpx;
  border-radius: 12rpx;
  border: none;
}

.btn-edit:active {
  background-color: #0047b3;
}

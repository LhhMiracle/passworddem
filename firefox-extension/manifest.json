{
  "manifest_version": 2,
  "name": "密码保险箱",
  "version": "1.0.0",
  "description": "安全的密码管理器 - 自动填充密码、生成强密码、安全存储",
  "icons": {
    "48": "assets/icon48.png",
    "96": "assets/icon96.png"
  },
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "32": "assets/icon32.png",
      "48": "assets/icon48.png"
    },
    "default_title": "密码保险箱"
  },
  "background": {
    "scripts": ["background/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "css": ["content/content.css"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus",
    "notifications",
    "<all_urls>"
  ],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "Command+Shift+P"
      },
      "description": "打开密码保险箱"
    },
    "fill_password": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Command+Shift+F"
      },
      "description": "自动填充密码"
    }
  },
  "web_accessible_resources": ["assets/*"],
  "browser_specific_settings": {
    "gecko": {
      "id": "password-vault@example.com",
      "strict_min_version": "109.0"
    }
  }
}
